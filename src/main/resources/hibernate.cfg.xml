<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
	<session-factory> <!-- Interactions avec la BDD -->
		<property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
		<property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
		<property name="hibernate.connection.url">jdbc:mysql://localhost/tests</property>
		<property name="hibernate.connection.username">root</property>
		<property name="hibernate.connection.password">activ</property> 
		<!-- Seront indiquÃ©s ici les fichiers de mapping -->
		<mapping class="beans.Boisson"/>
		<mapping class="beans.Biere"/>
		<mapping class="beans.Cocktail"/>
		<mapping class="beans.Coffret"/>
		<mapping class="beans.GestionBoisson"/>
		<mapping class="beans.SansAlcool"/>
		<mapping class="beans.Shooter"/>
		<mapping class="beans.User"/>
		<mapping class="beans.Vins_Spiritueux"/>

	</session-factory>
</hibernate-configuration>